<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.Home">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:background="@color/principal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/roboto_bold"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:text="MedApp"
                android:textColor="@color/white"
                android:textSize="24dp" />
        </LinearLayout>


        <androidx.cardview.widget.CardView
            android:layout_width="373dp"
            android:layout_height="152dp"
            android:layout_margin="20dp"
            android:background="@drawable/custom_edittext"
            app:cardCornerRadius="30dp"
            app:cardElevation="0dp"

            app:cardBackgroundColor="#638972">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="10dp">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="135dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/medapp" />

                <TextView
                    android:id="@+id/txtUser"
                    android:layout_width="227dp"
                    android:layout_height="133dp"
                    android:fontFamily="@font/roboto_bold"
                    android:gravity="center"
                    android:text="MedApp esta aqui para ayudarte."
                    android:textColor="@color/white"
                    android:textSize="24dp" />

            </LinearLayout>


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="371dp"
            android:layout_height="287dp"
            android:background="@drawable/custom_edittext"
            app:cardCornerRadius="30dp"
            app:cardElevation="20dp">

            <CalendarView
                android:id="@+id/calendarView"
                android:layout_width="match_parent"
                android:layout_height="303dp"
                android:background="#0068b3"
                android:maxDate="01/01/2050"
                android:minDate="01/01/2022"
                android:padding="10dp"
                android:theme="@style/CalenderViewCustom" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="373dp"
            android:layout_height="125dp"
            android:layout_margin="20dp"
            android:background="@drawable/custom_edittext"
            app:cardBackgroundColor="#95AB9E"
            app:cardCornerRadius="30dp"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="204dp"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/roboto_bold"
                    android:gravity="center"
                    android:text="Cuida a tu paciente desde cualquier lugar."
                    android:textColor="@color/white"
                    android:textSize="24dp" />

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="148dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/doctor" />



            </LinearLayout>


        </androidx.cardview.widget.CardView>

</LinearLayout>
</FrameLayout>