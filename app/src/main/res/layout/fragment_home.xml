<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.Home">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="189dp"

            android:background="@color/principal"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/doctors_home" />
        </LinearLayout>


        <androidx.cardview.widget.CardView
            android:layout_width="373dp"
            android:layout_height="45dp"
            android:layout_margin="10dp"
            android:background="@drawable/custom_edittext"
            app:cardBackgroundColor="#D5DFE8"
            app:cardCornerRadius="30dp"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="match_parent"
                    android:layout_height="47dp"
                    android:fontFamily="@font/roboto_bold"
                    android:gravity="center"
                    android:text="Â¡Bienvenido a MedApp!"
                    android:textColor="@color/principal"
                    android:textSize="24dp" />
            </LinearLayout>


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="371dp"
            android:layout_height="287dp"
            android:layout_margin="10dp"
            android:background="@drawable/custom_edittext"
            app:cardCornerRadius="30dp"
            app:cardElevation="20dp">

            <CalendarView
                android:id="@+id/calendarView"
                android:layout_width="match_parent"
                android:layout_height="303dp"
                android:background="#0068b3"
                android:maxDate="01/01/2050"
                android:minDate="01/01/2022"
                android:padding="10dp"
                android:theme="@style/CalenderViewCustom" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="373dp"
            android:layout_height="125dp"
            android:layout_margin="10dp"
            android:background="@drawable/custom_edittext"
            app:cardBackgroundColor="#D5DFE8"
            app:cardCornerRadius="30dp"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="216dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/roboto_bold"
                    android:gravity="center"
                    android:text="Cuida a tu paciente desde cualquier lugar."
                    android:textColor="@color/principal"
                    android:textSize="24dp" />

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="91dp"
                    android:layout_height="89dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="30dp"
                    android:src="@drawable/medappv2" />


            </LinearLayout>


        </androidx.cardview.widget.CardView>

</LinearLayout>
</FrameLayout>