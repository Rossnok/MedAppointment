<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:background="@drawable/card_view_cita_proxima_stile"
    android:elevation="20dp"
    android:outlineProvider="bounds"
    android:gravity="center_horizontal">

    <ImageView
        android:layout_width="120dp"
        android:layout_height="150dp"
        android:layout_marginRight="8dp"
        android:src="@drawable/person_icon"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="8dp">

        <TextView
            android:id="@+id/nombrePacienteCardViewCitas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/roboto_medium"
            android:text="Sergio Rosas Mendez"
            android:textSize="19dp" />

        <TextView
            android:id="@+id/edadPacienteCardViewCitas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/roboto_medium"
            android:text="26 AÃ±os"
            android:textSize="19dp" />

        <TextView
            android:id="@+id/alergiasPacienteCardViewCitas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/roboto_medium"
            android:text="Alergias: penicilina"
            android:textSize="19dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:paddingStart="30dp">

            <TextView
                android:id="@+id/fechaPacienteCardViewCitas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/roboto_black"
                android:text="25/10/2022"
                android:textSize="19dp" />

            <TextView
                android:id="@+id/horaPacienteCardViewCitas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:fontFamily="@font/roboto_black"
                android:text="13:45 PM"
                android:textSize="19dp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>

</androidx.cardview.widget.CardView>